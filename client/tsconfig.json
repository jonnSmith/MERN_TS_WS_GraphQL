{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": false,
    "removeComments": true,
    "strict": false,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@appchat/*": ["src/*/index", "src/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["./src/legacy", "./../node_modules"],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "./src/**/*"
    ]
  }
}
