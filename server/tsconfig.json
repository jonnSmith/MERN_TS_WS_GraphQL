{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5","es6","dom"],
    "sourceMap": true,
    "outDir": "../build",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@backchat/*": ["./src/*"],
      "@shared/*": ["./../shared/*"],
      "@configs/*": ["./../configs/*"]
    }

  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./../node_modules",
    "./**/*.json",
    ""
  ],
  "moduleDirectories": ["node_modules", "server", "shared", "configs"]
}