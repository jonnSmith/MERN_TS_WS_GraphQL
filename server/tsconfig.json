{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5","es6","dom"],
    "sourceMap": true,
    "outDir": "../build",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./../node_modules",
    "./**/*.json",
    ""
  ]
}